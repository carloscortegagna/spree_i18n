<!-- insert_bottom '#main-nav-bar' -->
<% if SpreeI18n::Config.supported_locales.size > 1 %>
  <li id="locale-select" style="float: right; margin-right: 10px;" data-hook>
    <%- SpreeI18n::Config.supported_locales.each do |locale| %>
      <% if locale != I18n.locale %>
        <%= link_to locale, request.path.gsub("/#{I18n.locale}/", "/#{locale}/") %>
      <%- end %>
    <%- end %>
  </li>
<% end %>
